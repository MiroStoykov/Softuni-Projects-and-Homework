<section id="search">
    <h1>Search</h1>
    <form method="get" class="form">
        <input type="text" class="search" name="name" placeholder="Title...">
        <input type="text" name="genre" class="search" placeholder="Genre...">
        <input type="number" name="year" class="search" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>
<section id="catalog">
    <div class="band">
        {{#each movies}}
        {{>movie}}
        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no movies matched...</p>
        </div>
        {{/each}}
    </div>
    <!-- If there are no posts matched display: -->


    </div>
</section>